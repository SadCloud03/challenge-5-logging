{
    "version" : 1,
    "formatters" : {
        "detail" : {
            "format" : "%(asctime)s | %(levelname)s | %(name)s | %(message)s"
        },
        "simple" : {
            "format" : "%(levelname)s : %(message)s"
        },
        "json" : {
            "()" : "json_formatter.JsonFormater"
        }
    },
    "handlers" : {
        "stderr" : {
            "class" : "logging.StreamHandler",
            "level" : "WARNING",
            "formatter" : "simple",
            "stream" : "ext://sys.stderr"
        },
        "file" : {
            "class" : "logging.handlers.RotatingFileHandler",
            "level" : "DEBUG",
            "formatter" : "json",
            "filename" : "logs_email/logs_main.log",
            "maxBytes" : 10000,
            "backupCount" : 2
        },
        "http" : {
            "()" : "http_handler.HTTPLogHandler",
            "level" : "INFO",
            "formatter" : "json",
            "url" : "http://127.0.0.1:8000/logs"
        }
    },
    "loggers" : {
        "root" : {
            "level" : "DEBUG",
            "handlers" : [
                "stderr",
                "file",
                "http"
            ]
        }
    }
}